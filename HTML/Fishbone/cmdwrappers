[% BLOCK scanwarning -%]
<b>[% "NOTE" | string %]</b> [% "SCAN_WARNING" | string -%]
	[%- IF audiodir -%]
		[%- "SCAN_CLICK" | string; %]<a href="browsetree.html?level=0&player=[% playerURI %]">[% "HERE" | string %]</a>.
	[%- END %]
[% END %]

[% BLOCK crumblist -%]
[%- FOREACH item = pwd_list.list -%]
  [%- IF not loop.first %] / [% END -%]
  [%- PROCESS crumblistitem -%]
[%- END -%]
[%- END %]

[% BLOCK crumblistitem -%]
 [%- IF item.title -%]
<a [% PROCESS "${item.hreftype}ItemHRef" %]>[% item.title %]</a>
 [%- ELSE -%]
[% item | replace('^\s*/','') %]
 [%- END -%]
[%- END %]

[% BLOCK playlistlinks %]
	[% WRAPPER moveuplink   %][% PROCESS cmdMoveHRef moveTo = MoveUp           %][% END %]
	[% WRAPPER movedownlink %][% PROCESS cmdMoveHRef moveTo = MoveDown         %][% END %]
	[% WRAPPER insertlink   %][% PROCESS cmdMoveHRef moveTo = item.nextsongind %][% END %]
	[% WRAPPER removelink   %][% PROCESS cmdDeleteHRef                         %][% END %]
	[% WRAPPER infolink     %][% PROCESS songinfoItemHRef                      %][% END %]
[% END %]

[% BLOCK trackinfo %]
	[% IF item.num || item.num == 0 %]
			<b><a [% PROCESS cmdJumpHRef num = item.num %] target="status">&nbsp;[% item.num + 1 %].&nbsp;</a>
			<a [% PROCESS cmdJumpHRef num = item.num %] target="status">[% item.title | html %]</a></b>
	[% ELSIF item.item %]
		<a [% songinfoItemHRef %]>[% item.text | html %][% IF showYear && item.year %] ([% item.year %])[% END %]</a>
	[% ELSE %]
		[% item.text | html %]
	[% END %]
	
	[% IF item.includeArtist && item.artist; PROCESS artistsAsHTML.html itemobj = item.itemobj; END %]
	
	[% IF item.includeAlbum && item.album && item.album != noAlbum %][% "FROM" | string %]
	<i><a [% PROCESS albumItemHRef %] target="browser">[% item.itemobj.album.title | html %]</a></i>[% END %]
[% END %]

[% END -%]
